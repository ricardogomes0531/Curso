@model List<I9Solucoes.Models.CursoAluno>
@{
	Layout = "~/Views/Shared/_LayoutEspecifico.cshtml";
}
<section>
<div class="row">
	<div class="col-lg-3">
		<h1>Meus Cursos</h1>
	</div>
	<div class="col-lg-8">
		@if (Model.Count() > 0)
		{
			foreach (var cursos in Model.ToList())
			{
				<p class="text-lead">
					<b>Nome do curso: @cursos.NomeCurso</b>
					<br />
					<b>Iniciado em: @cursos.DataCadastro.ToString("dd/MM/yyyy")</b>
					<br />
					@if (DateTime.Compare(DateTime.Now,cursos.DataInicio)>=0 && DateTime.Compare(DateTime.Now,cursos.DataFim)<=0)
					{
						<a href="/Curso/?idCurso=@cursos.IdCurso">Ir para o curso</a>
					}
					@if (DateTime.Now < cursos.DataInicio)
					{
					<p class="text-lead">O curso ainda não iniciou. A data de início é @cursos.DataInicio.ToString("dd/mm/yyyy")</p>
				}
					@if (DateTime.Now > cursos.DataFim)
					{
						<p class="text-lead">O curso encerrou em @cursos.DataFim.ToString("dd/MM/yyyy") e hoje é @DateTime.Now</p>
					}

					</p>
				}
			}
			else
			{
				<p class="text-lead">Você ainda não está incrito em nenhum curso.</p>
			}
	</div>
</div>
</section>
<hr>
